{
    "manifest_version": 3,
    "name": "Tweet Reply Helper",
    "version": "1.0",
    "description": "Adds a button to Tweet reply fields to fetch and display the original Tweet text.",
    "permissions": ["activeTab", "scripting"],
    "icons": {
      "16": "cat.jpg",
      "48": "cat.jpg",
      "128": "cat.jpg"
    },
    "content_scripts": [
      {
        "matches": ["https://x.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "cat.jpg",
        "48": "cat.jpg",
        "128": "cat.jpg"
      }
    }
  }
  